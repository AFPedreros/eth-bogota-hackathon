{
  "name": "frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "vite": "vite",
    "dev": "run-p vite esbuild:watch",
    "copy": "cp index.html dist; cp style.css dist",
    "build": "npm run esbuild && npm run copy",
    "preview": "vite preview",
    "esbuild": "esbuild main.js --bundle --outfile=dist/bundle.js",
    "esbuild:watch": "esbuild main.js --bundle --outfile=dist/bundle.js --watch"
  },
  "devDependencies": {
    "vite": "^3.1.0",
    "esbuild": "^0.15.10",
    "npm-run-all": "^4.1.5"
  }
}
