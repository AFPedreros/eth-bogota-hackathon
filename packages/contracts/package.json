{
  "name": "@sky-block/contracts",
  "version": "0.0.1",
  "scripts": {
    "clean:dist": "rimraf dist",
    "clean:nm": "rm -rf node_modules",
    "clean:sol": "rimraf typechain",
    "clean": "run-p clean:*",
    "start": "ts bin/dev",
    "start:ipfs": "jsipfs daemon",
    "move:sol": "cp -r typechain dist",
    "move:deployments": "cp -r typechain dist",
    "build:sol": "hardhat compile && npm run move:sol && npm run move:deployments",
    "build:services": "tsc --project tsconfig.build.json",
    "build": "npm run build:sol && npm run build:services",
    "kill:evm": "lsof -i tcp:8545 | grep LISTEN | awk '{print $2}' | xargs kill -15",
    "kill:ipfs": "pkill node; # this is a cudgel",
    "test": "hardhat ts-jest",
    "test:watch": "hardhat ts-jest --watch",
    "node": "node",
    "ts": "TS_NODE_FILES=true npm run node -- -r ts-node/register -r dotenv/config"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.88.0"
  },
  "devDependencies": {
    "@ethereum-waffle/jest": "^3.3.2",
    "@ethersproject/address": "^5.6.1",
    "@ethersproject/bytes": "^5.6.1",
    "@ethersproject/contracts": "^5.6.1",
    "@ethersproject/keccak256": "^5.6.1",
    "@ethersproject/providers": "^5.6.1",
    "@ethersproject/strings": "^5.6.1",
    "@ethersproject/transactions": "^5.6.1",
    "@ethersproject/wallet": "^5.6.1",
    "@nomiclabs/hardhat-ethers": "^2.0.5",
    "@nomiclabs/hardhat-etherscan": "^3.0.3",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/contracts": "^4.7.3",
    "@typechain/ethers-v5": "^7.2.0",
    "@typechain/hardhat": "^2.3.1",
    "@types/bl": "^5.0.2",
    "@types/jest": "^27.5.0",
    "@types/long": "^4.0.2",
    "@types/node": "^12.20.50",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "chalk": "^5.0.1",
    "chokidar": "^3.5.3",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^5.2.0",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.6.5",
    "hardhat": "^2.11.2",
    "hardhat-gas-reporter": "^1.0.8",
    "jest": "^28.1.0",
    "long": "^5.2.0",
    "peer-id": "^0.16.0",
    "prettier": "^2.6.2",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.7.21",
    "ts-generator": "^0.1.1",
    "ts-jest": "^28.0.2",
    "ts-node": "^10.7.0",
    "typechain": "^5.2.0",
    "typescript": "^4.6.4"
  },
  "engines": {
    "node": ">=16.0.0"
